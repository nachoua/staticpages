        }
      } 
  }

  .views-field.views-field-nothing {
    display: block;

    #particles-js {
      display: block;
      animation-name: load-in;
      animation-duration: 1s;
      animation-timing-function: ease-in;
      animation-direction: normal;
      position: absolute;
      top: 0;
