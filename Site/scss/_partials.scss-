    max-width: 950px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;

    h2 {

      color: $white;

    }

    ul {
      text-align: left;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      list-style-type: none;
      padding: 0;
      margin: 30px 0 0;
      line-height: 1.3;
      font-size: 1.125rem;

      li {
        position: relative;
        padding: 10px 15px 10px 3.125rem;
        background-color: rgba($white, 0.05);
        width: 100%;
        margin-bottom: 2px;

        &:nth-child(even) {
          background-color: rgba($white, 0.02);
        }

        @include media-breakpoint-up(md) {
          width: calc(50% - 1px);

          &:nth-child(even) {
            background-color: transparent;
          }

          &:nth-child(4n + 2),
          &:nth-child(4n + 3) {
            background-color: rgba($white, 0.02);
          }
        }


        &::before {
          //content: "\f058";
          //font-weight: $font-light;
          //font-size: 1.5rem;
          //line-height: 1;
          content: '';
          position: absolute;
          left: 15px;
          top: 8px;
          width: 24px;
          height: 24px;
          background: url("data:image/svg+xml,%3Csvg role='img' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512' width='35.84' height='35'%3E%3Cpath fill='%23ffffff' d='M256 8C119.033 8 8 119.033 8 256s111.033 248 248 248 248-111.033 248-248S392.967 8 256 8zm0 464c-118.664 0-216-96.055-216-216 0-118.663 96.055-216 216-216 118.664 0 216 96.055 216 216 0 118.663-96.055 216-216 216zm141.63-274.961L217.15 376.071c-4.705 2.667-12.303 4.637-16.97-.068l-85.878-86.572c-4.667-4.705-4.637-12.303.068-16.97l8.52-8.451c4.705-4.667 12.303-4.637 16.97.068l68.976 69.533 163.441-162.13c4.705-4.667 12.303-4.637 16.97.068l8.451 8.52c4.668 4.705 4.637 12.303-.068 16.97z'%3E%3C/path%3E%3C/svg%3E") no-repeat center center/contain;
        }
      }
    }
  }
}

